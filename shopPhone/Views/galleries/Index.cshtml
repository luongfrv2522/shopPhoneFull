@model IEnumerable<shopPhone.gallery>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/shopLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.gallery_name)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.gallery_name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id_gallery }) |
            @Html.ActionLink("Details", "Details", new { id=item.id_gallery }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id_gallery })
        </td>
    </tr>
}

</table>
